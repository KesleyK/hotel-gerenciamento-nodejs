<%- include('../includes/header') %>
    <style>
        main{
            background-color: goldenrod;
            text-align: center;
            border-radius: 5%;
            margin-left: 150px;
            margin-right: 150px;
            padding-bottom: 10px;
            margin-top: 10px;
            border: 2px solid gold
        }
        body{
            background-image: url("https://gartic.com.br/imgs/mural/an/ani_cherry/hotel.png");
