<body>
    <main class="centered">
        <h1>Hotel - Primeiros Passos (Criação)</h1>
        <form action="/admin/criacao" method="post">
            <div>
                <label for="title">Nome Hotel</label><br>
                <input type="text" name="nome">
            </div>
            <div>
                <label for="localizacao">Localização</label><br>
                <input type="text" name="localizacao">
            </div>
            <div>
                <label for="telefone">Telefone</label><br>
                <input type="int" name="telefone">
            </div>
            <button type="submit">Iniciar</button>
        </form>
    </main>
